{
  "name": "nest-angular-starter",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "server:dev": "nodemon",
    "server:debug": "nodemon --config nodemon-debug.json",
    "server:build": "tsc -p tsconfig.build.json",
    "server:start": "ts-node --project src/server/tsconfig.json src/server/main.ts",
    "server:lint": "tslint -p tsconfig.json -c tslint.json",
    "server:test": "jest",
    "server:test-watch": "jest --watch",
    "server:test-cov": "jest --coverage",
    "server:test-debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "server:e2e": "jest --config ./e2e/server/jest-e2e.json",
    "build": "npm run client:build && npm run server:build",
    "build:client-and-server": "ng build --prod && ng run nest-angular-starter:server:production",
    "build:prerender": "npm run build:client-and-server && npm run webpack:server && npm run generate:prerender",
    "build:ssr": "npm run build:client-and-server && npm run webpack:server",
    "generate:prerender": "cd dist && node prerender",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "serve:prerender": "cd dist/client && http-server -p 8080",
    "serve:ssr": "node dist/server",
    "start:server-and-client": "npm run build:ssr && npm run serve:ssr"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/http": "~7.2.0",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/platform-server": "^7.2.10",
    "@angular/router": "~7.2.0",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/ng-universal": "^0.4.2",
    "@nestjs/platform-express": "^6.0.0",
    "@nguniversal/express-engine": "^7.1.1",
    "@nguniversal/module-map-ngfactory-loader": "^7.1.1",
    "core-js": "^2.5.4",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "~6.3.3",
    "tslib": "^1.9.0",
    "webpack-cli": "^3.3.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular/cli": "~7.3.6",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "^23.3.13",
    "@types/node": "~8.9.4",
    "@types/supertest": "^2.0.7",
    "codelyzer": "~4.5.0",
    "express": "4.16.4",
    "http-server": "0.11.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^23.6.0",
    "karma": "~4.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "nodemon": "^1.18.9",
    "protractor": "~5.4.0",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "ts-node": "^7.0.1",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src/server",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
